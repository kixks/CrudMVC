@model List<CrudNonApiMVC.Models.AvailableItem>
@{
    ViewData["Title"] = "Available Items List";
}


<div class="d-flex justify-content-between p-4">
    <h3>List of Available Items</h3>
    <a asp-action="Create" class="btn btn-primary">+ Add Item</a>
</div>

<table class="table table-secondary table-bordered">
    <thead>
        <tr>
            <th scope="col"> # </th>
            <th scope="col"> Name </th>
            <th scope="col"> Isle Department </th>
            <th scope="col"> Price </th>
            <th scope="col"> Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table table-light">
                <th scope="row">@item.Id</th>
                <td>@item.ItemName</td>
                <td>@item.ItemGenre</td>
                <td>₱ @item.ItemPrice.ToString("N2")</td>
                <td class="d-flex justify-content-evenly">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

