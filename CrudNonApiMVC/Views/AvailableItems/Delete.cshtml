@model CrudNonApiMVC.Models.AvailableItem
@{
    ViewData["Title"] = "Delete an Item ";
}

<h3>Are you sure to delete this item?</h3>

<form asp-action="Delete" method="POST">
    <div class="form-group">
        <label for="itemName">Item Name</label>
        <input type="text" asp-for="ItemName" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label for="ItemGenre">Isle Department</label>
        <input type="text" asp-for="ItemGenre" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label for="ItemPrice">Price</label>
        <input type="number" asp-for="ItemPrice" class="form-control" disabled />
    </div>
    <div class="d-flex justify-content-between p-3">
        <button type="submit" class="btn btn-danger">Delete Item</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>