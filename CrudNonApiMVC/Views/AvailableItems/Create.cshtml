@model CrudNonApiMVC.Models.AvailableItem
@{
    ViewData["Title"] = "Add new Item ";

}

<h3>Add new Item</h3>

<form asp-action="Create" method="POST">
    <div class="form-group p-2">
        <label for="itemName">Item Name</label>
        <input type="text" asp-for="ItemName" class="form-control" />
    </div>
    <div class="form-group p-2">
        <label for="ItemGenre">Isle Department</label>
        <input type="text" asp-for="ItemGenre" class="form-control" />
    </div>
    <div class="form-group p-2">
        <label for="ItemPrice">Price</label>
        <input type="number" asp-for="ItemPrice" class="form-control" />
    </div>
    <div class="d-flex justify-content-between p-3">
    <button type="submit" class="btn btn-primary">Add Item</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
